@model CourseMessengerWeb.Models.ConfirmAccountViewModel
@{
    ViewBag.Title = "Complete your registration";
}

<h2>@ViewBag.Title.</h2>

<blockquote>
    <p>Hi @ViewBag.Name, please check your mobile phone to complete your registration. Enter the code that was sent to you.</p>
  
</blockquote>

@using (Html.BeginForm("ActivateAccount", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*<h4>Confirm your account.</h4>*@
    <hr />
    
    @Html.HiddenFor(m=>m.UserId)
    @Html.HiddenFor(m=>m.PhoneNumber)
    @Html.HiddenFor(m=>m.EmailCode)
    @Html.ValidationSummary("", new { @class = "text-danger" })
    

    <div class="form-group">
        @Html.LabelFor(m => m.SmsCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SmsCode, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Complete my registration" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
