@using CourseMessengerWeb.Components
@model IEnumerable<CourseMessengerWeb.Models.ReminderMessage>

@{
    ViewBag.Title = "Index";
}

<h2>All Messages: @ViewBag.Count</h2>

<p>
    <a title="add new lecture detail" href="@Url.Action("Create")" role="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReminderType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>
        <td>
            @(StatusCodes.ReminderTypes.All.FirstOrDefault(k=>k.Key==item.ReminderType).Value)
        </td>
        <td>
            <a title="edit @item.Message" href="@Url.Action("Edit", new { id = item.Id })">
                <span class="glyphicon glyphicon-pencil"></span>
            </a> |
            <a title="view @item.Message details" href="@Url.Action("Details",new{id=item.Id})">
                <span class="glyphicon glyphicon-list-alt"></span>
            </a> |
            <a title="delete @item.Message" href="@Url.Action("Delete", new { id = item.Id })">
                <span class="glyphicon glyphicon-trash"></span>
            </a> 
        </td>
    </tr>
}

</table>
