@using CourseMessengerWeb.Components
@model IEnumerable<CourseMessengerWeb.Models.LectureHour>

@{
    ViewBag.Title = "Index";
}

<h2>All Lectures: @ViewBag.Count</h2>


<p>
    <a title="add new lecture detail" href="@Url.Action("Create")" role="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DayOfWeek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayOfWeek)
        </td>
        <td>

            @StatusCodes.ReminderStatusCodes.All.FirstOrDefault(c => c.Key == item.Status).Value
        </td>
        <td>
            <a title="edit @item.Course.Name" href="@Url.Action("Edit", new { id = item.Id })">
                <span class="glyphicon glyphicon-pencil"></span>
            </a> |
            <a title="view @item.Course.Name details" href="@Url.Action("Details",new{id=item.Id})">
                <span class="glyphicon glyphicon-list-alt"></span>
            </a> |
            <a title="delete @item.Course.Name" href="@Url.Action("Delete", new { id = item.Id })">
                <span class="glyphicon glyphicon-trash"></span>
            </a> 
        </td>
    </tr>
}

</table>
