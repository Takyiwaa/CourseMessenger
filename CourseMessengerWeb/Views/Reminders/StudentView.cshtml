@model IEnumerable<CourseMessengerWeb.Models.Reminder>

@{
    ViewBag.Title = "Select To Subscribe";
}

<h2>Select to Subscribe</h2>

<div class="col-md-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Exam Reminders</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Course Code</th>
                        <th>Name</th>
                        <th>Starts at</th>
                        <th>Ends at</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                        
                            <td>@item.Course.Code</td>
                            <td>@item.Course.Name</td>
                            <td>@item.StartTime.ToString("F")</td>
                            <td>@item.EndTime.ToString("F")</td>
                            <td><a href="@Url.Action("Subscribe",new{id=@item.Id})" role="button" class="btn btn-info">Subscribe</a></td>
                          
                        </tr>
                    }
                   
                  
                </tbody>
            </table>
        </div>
    </div>
</div>
