@using CourseMessengerWeb.Controllers
@model List<SubscriptionItem>

@{
    ViewBag.Title = "All Subscriptions";
}


@if (Model.Any())
{
    <h2>All Subscriptions</h2>

    <div class="col-md-12">

        @foreach (var subscriptions in Model)
        {
            <div class="panel panel-info">
                <div class="panel-heading">
                    @*<h3 class="panel-title">@subscriptions.StudentDetails.Fullname (@subscriptions.StudentDetails.StudentId)</h3>*@
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-hover ">
                        <thead>
                        <tr>

                            <th>Subscription Entity</th>
                            <th>Description</th>
                  

                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var subscription in subscriptions.SubscriptionLists)
                        {
                            <tr>

                                <td>@subscription.SubscriptionTypeName</td>
                                <td>@subscription.Description</td>
                            
                                <td>
                                    @if (subscription.Status == 1)
                                    {
                                    <td><a href="@Url.Action("unsubscribe", new {id = @subscription.EntityId, subscriptionType = subscription.SubscriptionTypeName})" role="button" class="btn btn-danger">Unsubscribe</a></td>

                                    }
                                    else
                                    {
                                        <td><a href="@Url.Action("subscribe", new {id = @subscription.EntityId, subscriptionType = subscription.SubscriptionTypeName})" role="button" class="btn btn-success">Subscribe</a></td>

                                    }
                                </td>
                                
                                

                            </tr>
                        }


                        </tbody>
                    </table>
                </div>
            </div>

            <hr/>
        }

    </div>

}
else
{
    <blockquote>
        <p>There are no subscriptions.</p>
        <small>Message from: <cite title="Source Title">Administrator</cite></small>
    </blockquote>
}
