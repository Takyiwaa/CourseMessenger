@model IEnumerable<CourseMessengerWeb.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>All Departments: @ViewBag.Count</h2>

<p>

    <a title="add new department" href="@Url.Action("Create")" role="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
  
            <a title="edit @item.Name" href="@Url.Action("Edit", new { id = item.Id })"><span class="glyphicon glyphicon-pencil"
                     ></span></a> |
            <a title="view @item.Name details" href="@Url.Action("Details",new{id=item.Id})">
                <span class="glyphicon glyphicon-list-alt"></span>
            </a> |
            <a title="delete @item.Name" href="@Url.Action("Delete", new { id = item.Id })">
                <span class="glyphicon glyphicon-trash"></span>
            </a> 
          
        </td>
    </tr>
}

</table>
